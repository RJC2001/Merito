<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/verify_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_vertical"
    android:background="?attr/colorSurface">

    <TextView
        android:id="@+id/tvVerifyInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_email_instructions"
        android:textAppearance="?attr/textAppearanceBody1"
        android:paddingBottom="24dp" />

    <Button
        android:id="@+id/btnVerifyCheck"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_verify_code"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnVerifyResend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_email_sent"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnVerifyCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/action_logout"
        android:layout_marginTop="24dp" />

</LinearLayout>
